# WDYM86 Environment Configuration
# Copy this file to .env and update values

# ===========================================
# Application Settings
# ===========================================
APP_NAME="WDYM86 - AI Inventory Intelligence"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database Configuration
# ===========================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./wdym86.db

# ===========================================
# JWT Authentication
# ===========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Gemini AI
# ===========================================
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# AWS RDS (PostgreSQL)
# ===========================================
RDS_ENABLED=false
RDS_HOST=your-db.xxxxx.us-east-1.rds.amazonaws.com
RDS_PORT=5432
RDS_DATABASE=wdym86
RDS_USERNAME=wdym86_admin
RDS_PASSWORD=your-database-password

# ===========================================
# AWS S3 (File Storage)
# ===========================================
S3_ENABLED=false
S3_BUCKET_NAME=wdym86-storage

# ===========================================
# AWS Cognito (Authentication)
# ===========================================
COGNITO_ENABLED=false
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# AWS Secrets Manager
# ===========================================
SECRETS_ENABLED=false
DB_SECRET_NAME=wdym86/database-credentials
