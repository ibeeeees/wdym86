+    line_items: Optional[List[Dict[str, Any]]] = None
+    shipping: float = 0.0
+
+
+class TaxCalculationResponse(BaseModel):
+    tax_amount: float
+    tax_rate: float
+    taxable_amount: float
+    breakdown: Dict[str, Any]
+    source: str  # "taxjar" or "default"
+    error: Optional[str] = None
+
